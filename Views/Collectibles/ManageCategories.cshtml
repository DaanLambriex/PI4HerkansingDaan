@model List<PI4Daan.Category>

<div class="container mt-4">
    <h1 class="mb-4 text-center">Beheer Categorieën</h1>

    <form asp-action="AddCategory" method="post" class="d-flex mb-3">
        <input type="text" name="name" class="form-control me-2" placeholder="Nieuwe categorie toevoegen" required />
        <button type="submit" class="btn btn-primary">Toevoegen</button>
    </form>

    <ul class="list-group">
        @foreach (var category in Model)
        {
            <li class="list-group-item d-flex justify-content-between align-items-center">
                @category.Name
                <form asp-action="DeleteCategory" method="post" class="d-inline">
                    <input type="hidden" name="id" value="@category.Id" />
                    <button type="submit" class="btn btn-danger btn-sm">Verwijderen</button>
                </form>
            </li>
        }
    </ul>
</div>
<!-- Knop om terug te gaan -->
<a href="javascript:history.back()" class="btn btn-secondary mt-3">
    <i class="fas fa-arrow-left"></i> Terug naar vorige pagina
</a>