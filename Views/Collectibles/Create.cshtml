@model PI4Daan.Collectible

@{
    ViewData["Title"] = "Create";
}

<div class="container mt-4">
    <h1 class="mb-4 text-center">Nieuw Collectible</h1>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Create" class="card p-4 shadow-sm">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-group mb-3">
                    <label asp-for="Name" class="form-label">Naam</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Description" class="form-label">Beschrijving</label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Price" class="form-label">Prijs</label>
                    <input asp-for="Price" class="form-control" type="number" step="0.01" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Value" class="form-label">Waarde</label>
                    <input asp-for="Value" class="form-control" type="number" step="0.01" />
                    <span asp-validation-for="Value" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Category" class="form-label">Categorie</label>
                    <select asp-for="Category" class="form-select">
                        <option value="">-- Kies een categorie --</option>
                        @foreach (var category in ViewBag.Categories as List<string>)
                        {
                            <option value="@category">@category</option>
                        }
                    </select>
                    <span asp-validation-for="Category" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Brand" class="form-label">Merk</label>
                    <select asp-for="Brand" class="form-select">
                        <option value="">-- Kies een merk --</option>
                        @foreach (var brand in ViewBag.Brands as List<string>)
                        {
                            <option value="@brand">@brand</option>
                        }
                    </select>
                    <span asp-validation-for="Brand" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Percentage" class="form-label">Percentage (%)</label>
                    <input asp-for="Percentage" class="form-control" type="number" step="0.1" />
                    <span asp-validation-for="Percentage" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Rating" class="form-label">Beoordeling</label>
                    <input asp-for="Rating" class="form-control" type="number" step="0.5" />
                    <span asp-validation-for="Rating" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-primary">Opslaan</button>
                    <a asp-action="Index" class="btn btn-secondary">Terug naar lijst</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
