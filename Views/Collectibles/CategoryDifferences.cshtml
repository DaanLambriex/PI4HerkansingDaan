@model IEnumerable<dynamic>

@{
    ViewData["Title"] = "Verschil per Categorie";
}

<div class="container mt-4">
    <h1 class="mb-4 text-center">Verschillen per Categorie</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Categorie</th>
                <th>Totaal Prijs</th>
                <th>Totaal Waarde</th>
                <th>Verschil (Waarde - Prijs)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Category</td>
                    <td>@item.TotalPrice.ToString("C")</td>
                    <td>@item.TotalValue.ToString("C")</td>
                    <td>@item.TotalDifference.ToString("C")</td>
                </tr>
            }
        </tbody>
    </table>

    <div class="mt-3">
        <a asp-action="List" class="btn btn-secondary">Terug naar overzicht</a>
    </div>
</div>
