@model IEnumerable<PI4Daan.Collectible>

<div class="container mt-4">
    <h1 class="mb-4 text-center">Collectibles Overzicht</h1>

    <p class="text-end">
        <a asp-action="Create" class="btn btn-primary">+ Nieuw Collectible</a>
    </p>

    <div class="col-md-9">
        <div class="card p-3">
            <h5 class="card-title">Resultaten</h5>
            @if (Model != null && Model.Any())
            {
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Naam</th>
                            <th>Beschrijving</th>
                            <th>Prijs (Inkoop)</th>
                            <th>Waarde (Dagwaarde)</th>
                            <th>Categorie</th>
                            <th>Merk</th>
                            <th>Percentage</th>
                            <th>Beoordeling</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var collectible in Model)
                        {
                            <tr>
                                <td>@collectible.Name</td>
                                <td>@collectible.Description</td>
                                <td>@collectible.Price.ToString("C")</td>
                                <td>@collectible.Value.ToString("C")</td>
                                <td>@collectible.Category?.Name</td>
                                <td>@collectible.Brand?.Name</td>
                                <td>@collectible.Percentage.ToString("0.0")%</td>
                                <td>
                                    <div class="rating">
                                        @{
                                            for (int i = 1; i <= 5; i++) // Links naar rechts tellen
                                            {
                                                if (collectible.Rating >= i)
                                                {
                                                    // Volledige ster
                                                    <label class="star full">&#9733;</label>
                                                }
                                                else if (collectible.Rating >= i - 0.5)
                                                {
                                                    // Halve ster
                                                    <label class="star">
                                                        <span class="half">&#9733;</span> <!-- Gele linkerhelft -->
                                                    </label>
                                                }
                                                else
                                                {
                                                    // Geen ster
                                                    <label class="star">&#9733;</label>
                                                }
                                            }
                                        }
                                    </div>
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@collectible.Id" class="btn btn-warning">Edit</a> |
                                    <a asp-action="Details" asp-route-id="@collectible.Id" class="btn btn-info">Details</a> |
                                    <a asp-action="Delete" asp-route-id="@collectible.Id" class="btn btn-danger">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="alert alert-info">
                    @ViewBag.Message
                </div>
            }
        </div>
    </div>
</div>
